<html>

<head>
	 <link rel="stylesheet" type="text/css" href="style.css">
  	 <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

<div class="container">
	<div class="strip">
		<center><h1> RB Library</h1></center>
		<span class="userspan" id="userspan1">
			<%= @user.email %> 
			<span class="logoutspan" id="logout1">
				<%= link_to "Change Password" %>
				<%= link_to "Logout", destroy_userdb_session_path, method: :delete, :class => 'navbar-link'  %>
			</span>
		</span>
	</div>
	<div class="sidemenu">
		<li><%= link_to "Recent Activity", user_path(id: @user.id) %></li>
		<li><%= link_to "Add/Remove Book", book_show_admin_path(id: @user.id) %></li>
		<li><%= link_to "View/Remove User", user_show_admin_path(id: @user.id) %></li>
		<li><%= link_to "Add User", user_post_admin_path(id: @user.id) %></li>

	</div>
	<div class="admin_signup" id="admin_signupdiv">
	<%= form_for :admin, url: user_add_admin_path(id: @user.id), html:{:id=>'signupform'} do |f| %>
  <p>
    <%= f.email_field :usermail, :placeholder=>'email',:id=>'email1'  %>
  </p>
  <p>
    <%= f.password_field :password, :placeholder=>'password',:id=>'password1'  %>
    <span id="passerror" class="validerror">*Your password must be minimum 6 characters </span>
  </p>
    
  <p>
    <%= f.text_field :age, :placeholder=>'age', :id=>'age1' %>
    <span id="ageerror" class="validerror">*Enter a valid age </span>
  </p>
  <p>
    <%= f.text_field :address, :placeholder=>'address'%>
  </p>
  <p>
    <%= f.text_field :mobile, :placeholder=>'mobile', :id=>'mobile1'%>
    <span id="mobileerror" class="validerror">*Enter a valid mobile no </span>
  </p> 

  <%= f.text_field :usertype, :placeholder=>'user type', :id=>'user_type1'%>
  <p>
    <%= f.submit :Signup!, :id=>'signupsubmit' %>
    <span id="submiterror" class="validerror">*Enter all mandatory fields </span>
  </p>
  <a href="#" id="signinshow">Login!</a>
<% end %>
</div>
</div>
<%= javascript_include_tag('admin_user_form.js') %>
<%= javascript_include_tag('accordian.js') %>
</body>
</html>