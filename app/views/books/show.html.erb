<!DOCTYPE html>

<head>
	 <link rel="stylesheet" type="text/css" href="style.css">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>

<div class="container">
	<div class="strip">
		<center><h1> RB Library</h1></center>
		<span class="userspan" id="userspan1">
			<%= @user.email %> 
			<span class="logoutspan" id="logout1">
				<%= link_to "Change Password",edit_userdb_registration_path,method: :get %>
				<%= link_to "Logout", destroy_userdb_session_path, method: :delete, :class => 'navbar-link'  %>
			</span>
		</span>
	</div>
	
	<div class="sidemenu">
		<li><%= link_to "My Bag", user_path(id: @user.id) %></li>
		<li><%= link_to "Fill My Bag", books_path(id: @user.id) %></li>
		<li><%= link_to "Update Me", edit_user_path(id: @user.id) %></li>
		<li><%= link_to "Experiment", book_path(id: @user.id) %></li>

	</div>

  

 <%= text_field_tag :search, params[:search],:id => "books_search_input" %>
  

 <%= form_tag books_path(id: @user.id), :method=>'post', :class =>'borrowbookform', :id=>"render_form" do %>
 <div id="bookresults_div"><%= render 'books' %>
 	</div> 
  <%= text_field_tag :userdb_id,  @user.id, :style=>'display:none;'  %>
  <%= submit_tag("ADD TO MY BAG") %>
 	<% end %> 
</div>

<%= javascript_include_tag('live_search.js') %>
</body>
</html>