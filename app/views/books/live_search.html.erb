<!DOCTYPE html>

<head>
	 <link rel="stylesheet" type="text/css" href="style.css">
  	
  	 <meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<body onload = "addevents()">

<div class="container">
	<div class="strip">
		<center><h1> RB Library</h1></center>
		<span class="userspan" id="userspan1">
			<%= @user.usermail %> 
			<span class="logoutspan" id="logout1">
				<%= link_to "Change Password" %>
				<%= link_to "Logout", session_path(id: @user.id) ,method: :delete %>
			</span>
		</span>
	</div>
	
	<div class="sidemenu">
		<li><%= link_to "My Bag", user_path(id: @user.id) %></li>
		<li><%= link_to "Fill My Bag", books_path(id: @user.id) %></li>
		<li><%= link_to "Update Me", edit_user_path(id: @user.id) %></li>
		<li><%= link_to "Experiment", live_search_books_path %></li>

	</div>

<%= form_tag live_search_books_path, :method => 'post', remote: true,:id => "books_search" do %> 
 <%= text_field_tag :search, params[:search],:id => "books_search_input" %>
 <%= submit_tag "Search", :name => nil %> 

 <div id="bookresults_div"><%= render 'books' %>
 	</div> 
 	<% end %> 
</div>

<%= javascript_include_tag('live_search.js') %>
</body>
</html>